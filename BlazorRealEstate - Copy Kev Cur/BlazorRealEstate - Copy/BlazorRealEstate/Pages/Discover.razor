</div>
<div class="value-column">
    <div class="options">5+</div>
</div>


@code {

    string spaceValue;
    string peopleValue;

    string SelectSpace
    {
        get => spaceValue;
        set { spaceValue = value; }
    }

    string SelectPeople
    {
        get => peopleValue;
        set { peopleValue = value; }
    }

}
